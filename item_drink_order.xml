<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/define_dimen_10"
    android:paddingBottom="@dimen/define_dimen_10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_drink"
        android:layout_width="@dimen/define_dimen_60"
        android:layout_height="@dimen/define_dimen_60"
        android:src="@drawable/image_drink_example"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/define_dimen_10"
        android:layout_toEndOf="@+id/img_drink"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/define_dimen_10"
                android:layout_toStartOf="@+id/tv_price"
                android:text="@string/app_name"
                android:textColor="@color/textColorHeading"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/app_name"
                android:textColor="@color/textColorHeading"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_10">

            <TextView
                android:id="@+id/tv_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/tv_count"
                android:text="@string/app_name"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/text_size_xsmall" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/define_dimen_10"
                android:text="@string/app_name"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/text_size_xsmall" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
